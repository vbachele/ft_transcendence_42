// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String?  @unique @default("")
  user42Name   String?
  email        String?  @default("")
  image        String?  @default("https://res.cloudinary.com/djdxw1y13/image/upload/v1676390380/Transcendence/default-avatar_hsktjo.png")
  coalition    String?  @default("Federation")
  status       String?  @default("offline")
  games        Int?     @default(0)
  wins         Int?     @default(0)
  ratio        Float?   @default(0)
  achievements String[]
  score        Int?     @default(0)
  accessToken  String   @default("noToken")
  refreshToken String?  @default("noRefreshToken")
  isRegistered Boolean  @default(false)

  friends   User[] @relation("friends")
  friendsOf User[] @relation("friends")

  pendings   User[] @relation("pending")
  pendingsOf User[] @relation("pending")

  blocked   User[] @relation("blocked")
  blockedOf User[] @relation("blocked")

  otp_enabled   Boolean?  @default(false)
  otp_verified  Boolean?  @default(false)
  otp_validated Boolean?  @default(false)
  otp_ascii     String?   @default("")
  otp_hex       String?   @default("")
  otp_base32    String?   @default("")
  otp_auth_url  String?   @default("")
  messages      Message[] @relation("author")
  lobbies       Lobby[]   @relation("joined")
  lobbyOwner    Lobby[]   @relation("owned")
  bannedFrom    Lobby[]   @relation("banned")
  muteFrom      Lobby[]   @relation("muted")
}

model Lobby {
  id          String    @id
  name        String    @unique
  description String?
  createdAt   DateTime
  type        String
  privacy     String
  maxClients  Int
  password    String?
  admin       User      @relation(name: "owned", fields: [adminName], references: [name])
  adminName   String
  users       User[]    @relation("joined")
  banned      User[]    @relation("banned")
  muted       User[]    @relation("muted")
  messages    Message[]
}

model Match {
  id Int @id

  createAt   DateTime
  finishedAt DateTime

  userOneId     Int
  userOnePoints Int

  userTwoId     Int
  userTwoPoints Int
}

model Message {
  id         Int       @id @default(autoincrement())
  content    String
  createdAt  DateTime? @default(now())
  author     User      @relation("author", fields: [authorName], references: [name])
  authorName String
  lobby      Lobby     @relation(fields: [lobbyId], references: [id])
  lobbyId    String
}
